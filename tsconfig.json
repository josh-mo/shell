{
  "compilerOptions": {
    "baseUrl": "./",
    "composite": true,
    "lib": ["dom", "webworker", "es2020", "scripthost", "dom.iterable"],
    "types": ["jest", "node"],
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "paths": {
      "src/*": ["./src/*"],
      "@components/*": ["src/javascripts/components/*"],
      "@lib/*": ["./src/javascripts/lib/*"],
      "@hooks/*": ["./src/javascripts/hooks/*"]
    },
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowUnreachableCode": false,
    "outDir": "emittedTypes",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
  },
  "exclude": ["**/node_modules", "**/.*/", "**/__fixtures__/", "**/stories.js"],
  "include": [".", "**/*.json"]
}
